@{
    Layout = null;
}
@model UserRegistrationDto;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Register - Employee Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
    <div class="register-container">
        <h2 class="text-center">Register</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post" asp-action="Register">
            <div class="row pt-4">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="registerFirstName" asp-for="FirstName"
                            placeholder="">
                        <label for="registerFirstName">First Name*</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="registerLastName" asp-for="LastName" placeholder="">
                        <label for="registerLastName">Last Name*</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row pt-4">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="registerUsername" asp-for="UserName" placeholder="">
                        <label for="registerUsername">User Name*</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="registerEmail" asp-for="Email" placeholder="">
                        <label for="registerEmail">Email*</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row pt-4">
                <div class="col-md-6">
                    <div>
                        <div>
                            <div class="form-floating input-group" id="registerPagePasswordDiv">
                                <input type="password" class="form-control password border-end-0" asp-for="Password"
                                    id="registerPassword" placeholder="Password"
                                    onfocus="highlightDiv('registerPagePasswordDiv')"
                                    onblur="removeHighlightDiv('registerPagePasswordDiv')">
                                <label for="registerPassword" class="form-label" style="z-index: 4;">Password</label>
                                <div class="input-group-append " id="eyeImgIconDiv">
                                    <span class="input-group-text eye-img-icon-span">
                                        <img src="/images/eye-slash-fill.svg" style="height: 20px;width: 20px;"
                                            id="passwordEyeIcon"
                                            onclick="changeEyeIcon('registerPassword','passwordEyeIcon')">
                                    </span>
                                </div>
                            </div>
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="registerMobileNo" asp-for="MobileNo" placeholder="">
                        <label for="registerMobileNo">Phone*</label>
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="pt-4">
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Leave a comment here" id="registerAddress" asp-for="Address"
                        style="height: 100px"></textarea>
                    <label for="registerAddress">Address*</label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="row pt-4">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="registerZipcode" asp-for="Zipcode" placeholder="">
                        <label for="registerZipcode">Zipcode*</label>
                        <span asp-validation-for="Zipcode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select class="form-select" id="registerRoleId" asp-for="RoleId">
                        </select>
                        <label for="registerRoleId">Role*</label>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-4 pt-4">
                <div class="col-md-4">
                    <div class="form-floating">
                        <select class="form-select" id="registerCountryId" asp-for="CountryId">
                        </select>
                        <label for="registerCountryId">Country*</label>
                        <span asp-validation-for="CountryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <select class="form-select" id="registerStateId" asp-for="StateId">
                        </select>
                        <label for="registerStateId">State*</label>
                        <span asp-validation-for="StateId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <select class="form-select" id="registerCityId" asp-for="CityId">
                        </select>
                        <label for="registerCityId">City*</label>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary text-white">Register</button>
            </div>

            <div class="text-center">
                <a href="@Url.Action("Login", "Authentication")" class="text-decoration-none text-info">Already have an
                    account? Login</a>
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/register.js" asp-append-version="true"></script>
</body>

</html>
<script>
    $(document).ready(function () {
        loadRoles();
        loadCountries();
        $("#registerCountryId").change(function () {
            var countryId = $(this).val();
            $("#registerStateId").html('<option value="">Select State</option>');

            if (countryId) {
                loadStates(countryId);
            }
        });

        $("#registerStateId").change(function () {
            var stateId = $(this).val();
            $("#registerCityId").html('<option value="">Select City</option>');

            if (stateId) {
                loadCities(stateId);
            }
        });
    });
</script>
