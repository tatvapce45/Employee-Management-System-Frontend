@{
    Layout = null;
}
@model string


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Verify OTP - Employee Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/verifyOTP.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
    <div class="verify-container ">
        <div class="inner-container">
            <div>
                <h2 class="text-center">Verify OTP</h2>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form method="post" action="@Url.Action("VerifyOtp", "Authentication")">
                    <div class="mb-3">
                        <div class="form-floating mb-3">
                            <input type="hidden" class="form-control" id="verifyOtpEmail" name="Email" value="@Model" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="verifyOtpOtp" name="otp"
                                placeholder="name@example.com">
                            <label for="verifyOtpOtp" class="otpLabel">Otp </label>
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">Verify OTP</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
