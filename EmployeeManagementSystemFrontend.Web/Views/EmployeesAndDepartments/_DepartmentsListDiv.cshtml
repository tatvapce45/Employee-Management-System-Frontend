@using System.Security.Claims
@{
    var role = ClaimsHelper.GetClaim(ClaimTypes.Role) ?? "No Role";
}
<div class="row mb-4 mt-4">
    <div class="container-fluid d-flex justify-content-between align-items-center pt-2 px-3">
        <h4 class="content-header ps-3">Departments</h4>
        <img src="/images/plus-square-svgrepo-com.svg" class="plus-square-icon pe-2 btn" onclick="@((role=="Admin"|| role=="HR Manager" ? "loadAddDepartmentModal()" : "showUnauthorizedToaster('department', 'add')"))"/>
    </div>
</div>
<div id="departmentsLoader"></div>